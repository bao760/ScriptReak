-- Blox Fruits Hub: Auto Farm, Boss Farm, Quest Farm, Stats, v.v.
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()
local Window = OrionLib:MakeWindow({Name = "Blox Fruits Hub | Farm", HidePremium = false, SaveConfig = true, ConfigFolder = "BloxFruitsHub"})

-- Variables
local autoFarm = false
local selectedWeapon = "Combat"
local autoStats = false
local autoFruit = false

-- Functions
function EquipWeapon(weaponName)
    local tool = game.Players.LocalPlayer.Backpack:FindFirstChild(weaponName)
    if tool then
        tool.Parent = game.Players.LocalPlayer.Character
    end
end

function FarmMob()
    while autoFarm do
        local mob = nil
        for _, v in pairs(game.Workspace.Enemies:GetChildren()) do
            if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                mob = v
                break
            end
        end
        if mob then
            pcall(function()
                game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = mob.HumanoidRootPart.CFrame * CFrame.new(0, 20, 0)
                EquipWeapon(selectedWeapon)
                repeat
                    wait()
                    game:GetService("VirtualInputManager"):SendMouseButtonEvent(0, 0, 0, true, game, 0)
                    game:GetService("VirtualInputManager"):SendMouseButtonEvent(0, 0, 0, false, game, 0)
                until mob.Humanoid.Health <= 0 or not mob.Parent or not autoFarm
            end)
        end
        wait(0.5)
    end
end

function AutoQuest()
    local questNPC = game.Workspace:FindFirstChild("Quest NPC")
    if questNPC then
        -- Implement auto quest logic here
        -- Example: Teleport and complete the quest
    end
end

function AutoStats()
    while autoStats do
        -- Automatically increase stats
        -- Adjust the stat upgrade logic here
        wait(0.5)
    end
end

function FarmBoss()
    while autoFarm do
        local boss = game.Workspace:FindFirstChild("Boss")
        if boss then
            EquipWeapon(selectedWeapon)
            -- Implement boss farm logic here
            repeat
                wait()
                -- Attack the boss
            until boss.Humanoid.Health <= 0 or not boss.Parent
        end
        wait(0.5)
    end
end

-- GUI: Auto Farm Toggle
local MainTab = Window:MakeTab({Name = "🏝️ Auto Farm", Icon = "rbxassetid://4483345998", PremiumOnly = false})

-- Auto Farm Toggle
MainTab:AddToggle({
    Name = "Auto Farm Level",
    Default = false,
    Callback = function(Value)
        autoFarm = Value
        if Value then
            FarmMob()
        end
    end
})

-- Auto Quest Toggle
MainTab:AddToggle({
    Name = "Auto Quest",
    Default = false,
    Callback = function(Value)
        autoQuest = Value
        if Value then
            AutoQuest()
        end
    end
})

-- Weapon Dropdown
MainTab:AddDropdown({
    Name = "Select Weapon",
    Default = "Combat",
    Options = {"Combat", "Katana", "Dark Blade", "Dragon Talon"},
    Callback = function(Value)
        selectedWeapon = Value
    end
})

-- Stats Tab (Coming soon)
local StatsTab = Window:MakeTab({Name = "📊 Auto Stats", Icon = "rbxassetid://4483345998", PremiumOnly = false})
StatsTab:AddParagraph("Auto Stats", "Coming soon: Auto upgrade Melee / Sword / Defense / Blox Fruit")

-- Boss Farm Tab (Coming soon)
local BossTab = Window:MakeTab({Name = "👹 Auto Boss", Icon = "rbxassetid://4483345998", PremiumOnly = false})
BossTab:AddParagraph("Auto Boss", "Coming soon: Auto farm boss")

-- Init
OrionLib:Init()
